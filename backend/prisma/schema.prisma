// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Int
  image       String?
  category    String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
}



